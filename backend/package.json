{
  "name": "backend",
  "version": "1.0.0",
  "description": "B-FIT backend - Express + MongoDB API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "seed:foods": "node src/scripts/seed/seedFoods.js",
    "seed:exercises": "node src/scripts/seed/seedExercises.js",
    "db:reset": "node src/scripts/reset.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.0",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "pino-http": "^10.5.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "fitness",
    "api"
  ],
  "author": "",
  "license": "ISC"
}